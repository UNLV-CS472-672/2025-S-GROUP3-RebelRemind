{
  "manifest_version": 3,
  "name": "RebelRemind",
  "version": "1.0",
  "icons": {
    "16": "images/logo_16x16.png",
    "48": "images/logo_48x48.png",
    "120": "images/pomodor-icon.png",
    "128": "images/logo_128x128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/logo_16x16.png",
      "48": "images/logo_48x48.png",
      "120": "images/pomodor-icon.png",
      "128": "images/logo_128x128.png"
    },
    "default_title": "Rebel Remind"
  },
  "side_panel": {
    "default_path": "sidepanel-index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "sidePanel",
    "windows",
    "system.display",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3001/*",
    "https://unlv.instructure.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "floating-timer.html",
        "scripts/floating-timer.js",
        "scripts/remove-widget.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/floating-widget.js"],
      "run_at": "document_idle"
    }
  ],
  "key": "",
  "oauth2": {
    "client_id": "79022561637-v6gffnn0h388bj9rt9dkfiheacmhgb24.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile", "https://www.googleapis.com/auth/calendar"]
  }
}
