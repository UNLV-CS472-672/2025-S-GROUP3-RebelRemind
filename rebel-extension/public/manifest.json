{
  "manifest_version": 3,
  "name": "RebelRemind",
  "version": "1.0",
  "icons" : {
    "16": "logo_16x16.png",
    "48": "logo_48x48.png",
    "128": "logo_128x128.png"

  },
  "action": {
    "default_popup": "index.html",
    "default_icon" : {
      "16": "logo_16x16.png",
      "48": "logo_48x48.png",
      "128": "logo_128x128.png"
    },
    "default_title": "Rebel Remind"
  },
  "side_panel": {
    "default_path": "sidepanel-index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "activeTab", "scripting", "identity", "sidePanel"],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://unlv.instructure.com/*"
  ],
  "key": "",
  "oauth2": {
    "client_id": "79022561637-v6gffnn0h388bj9rt9dkfiheacmhgb24.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  }
}
